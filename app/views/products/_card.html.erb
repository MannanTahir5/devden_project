<div class="container">
  <div class="row">
    <% @product.each do |product| %>
      <div class="col-sm-4 mb-4">
        <div class="card" style="width: 18rem;">
          <% if product.image.attached? %>
            <%= image_tag product.image, class: "card-img-top", alt: product.name, style: "width: 100%; height: 300px; object-fit: cover;" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <h6 class="card-subtitle mb-2 text-body-secondary"><%= product.description %></h6>
            <p class="card-text"><strong>$<%= product.price %></strong></p>
            <a href="<%= product_path(product) %>" class="card-link">View Product-></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>