<%= render '/home/navbar' %>
<br>
<br>

<div class="container">
  <div class="row">
    <div class="col-md-6">
        <%= image_tag @product.image, class: "img-fluid", alt: @product.name, style: "width: 100%; height: auto;"%>
    </div>
    <div class="col-md-6">
      <h1><%= @product.name.capitalize %></h1>
      <h3><strong>$<%= @product.price %></strong></p>
      <p><%= @product.description.capitalize %></p>
      <p>Available Sizes</p>
      <p><%= @product.size.capitalize %></p>
      <%= link_to 'Return', :back, class: "btn btn-primary" %>
      <%= button_to 'Add to Cart', add_to_cart_cart_path(@product), method: :post, class: "btn btn-secondary"%>
    </div>
  </div>
</div>
