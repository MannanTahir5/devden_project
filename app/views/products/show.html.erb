<%= render '/home/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-md-6">
        <%= image_tag @product.image, class: "img-fluid", alt: @product.name, style: "width: 100%; height: auto;"%>
    </div>
    <div class="col-md-6">
      <h1><%= @product.name %></h1>
      <h3><strong>$<%= @product.price %></strong></p>
      <p><%= @product.description %></p>
      <%= link_to 'Return', :back, class: "btn btn-danger" %>
    </div>
  </div>
</div>
