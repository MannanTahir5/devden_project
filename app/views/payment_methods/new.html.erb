<div class="container">
  <h1>Payment Information</h1>

  <%= form_with(model: [@order, @payment], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, 'Card Holder Name' %>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :details, 'Payment Details (Card no,Bank etc...)' %>
      <%= form.text_area :details, class: 'form-control', required: true %>
    </div>
    
    <br>
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
</div>